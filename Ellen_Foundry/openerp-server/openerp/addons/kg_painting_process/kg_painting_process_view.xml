<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<!-- Form View Start -->

		<record id="t_form_v_kg_painting_process" model="ir.ui.view">
			<field name="name">Painting Process Form</field>
			<field name="model">kg.painting.process</field>
			<field name="arch" type="xml">
				<form string="Painting Process" create="false" delete="false" version="7.0" >
					<header>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved"  readonly="1"/>
					</header>
					<sheet>
					<group>
						<group>
							<field name="name"/>						
							<field name="fin_id"/>						
							<field name="painting_id" attrs="{'readonly': [('state','=', 'approved')]}"/>						
							<field name="qty"/>						
							<field name="so_line_id" invisible='1'/>						
							<field name="sch_line_id" invisible='1'/>						
							<field name="week_line_id" invisible='1'/>						
							<field name="daily_line_id" invisible='1'/>						
						</group>
						<group>
							<field name="entry_date"  readonly='1'/>
							<field name="fin_insp_date" />
							<field name="product_id" readonly='1'/>
							<field name="mould_line_id" invisible='1' />
							<field name="melt_line_id"  invisible='1'/>
							<field name="fis_line_id"  invisible='1'/>
							<field name="fin_line_id" invisible='1' />
						</group>					
					</group>
					<notebook>
						<page string="Internal Notes">
							<field name="remark" nolabel='1' placeholder="Put an internal note..."/>
						</page>							
                        <page string="Entry Info">
							<group>
								<field name="company_id"/>
							</group>
							<group>
								<field name="active"/>
							</group>						
							<group>
								<group>
									<field name="user_id"/>
									<field name="confirm_user_id" attrs="{'invisible': [('state','=', 'draft')]}"/>
									<field name="ap_rej_user_id" attrs="{'invisible': [('state','in', ('draft','confirmed'))]}"/>
									<field name="update_user_id"/>
								</group>
								<group>
									<field name="crt_date"/>
									<field name="confirm_date" attrs="{'invisible': [('state','=', 'draft')]}"/>
									<field name="ap_rej_date" attrs="{'invisible': [('state','in', ('draft','confirmed'))]}"/>
									<field name="update_date"/>	
								</group>
							</group>
                        </page>            
						</notebook>				
					</sheet>
				</form>
			</field> 
		</record>
		
	<!-- Form View End -->
	     	
	
		
	<!-- Tree View Start -->
	
	
		<record id="t_tree_v_kg_painting_process" model="ir.ui.view">
			<field name="name">Painting Process Tree</field>
			<field name="model">kg.painting.process</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree create="false" delete="false" toolbar="True" string="Painting Process" colors="blue:state == 'draft';red:state == 'confirmed';black:state == 'approved'">					
					<field name="name"/>
					<field name="fin_id"/>
					<field name="painting_id"/>
					<field name="product_id"/>
					<field name="entry_date"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		
	<!-- Tree View End -->
	

	<!-- Search View Start -->

		<record id="t_search_v_kg_painting_process" model="ir.ui.view">
            <field name="name">Painting Process Search</field>
            <field name="model">kg.painting.process</field>
            <field name="arch" type="xml">
                <search string="Painting Process Search">
					<field name="name" string="Name"  filter_domain="[('name','ilike',self)]" />
					<field name="painting_id" string="Painting Id"  filter_domain="[('painting_id','ilike',self)]" />
					<field name="product_id" string="Product Name"  filter_domain="[('product_id','ilike',self)]" />
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->

        
	<!-- Menu Action Start-->
		
		
		 <record id="tma_kg_painting_process" model="ir.actions.act_window">
			<field name="name">Painting Process</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.painting.process</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="t_tree_v_kg_painting_process"/>
			<field name="search_view_id" ref="t_search_v_kg_painting_process"/>
			<field name="context">{"search_default_draft":1}</field>
		</record>
		
	<!-- Menu Action End-->

	
	<!-- Audit Log Xml Data Start -->
		
        <record id="audit_kg_painting_process" model="audittrail.rule">
            <field name="name">Audit Log Painting Process</field>
            <field name="object_id" eval="ref('kg_painting_process.model_kg_painting_process')"/>       
            <field name="state">subscribed</field>              
        </record>
        
    
        
    <!-- Audit Log Xml Data End-->	
		

		
	<!-- Menu Item Start -->
			
            
				
				<!-- Weekly Plan Action details-->
				
				<menuitem action="tma_kg_painting_process" name="Painting Process" id="tam_kg_painting_process" parent="kg_weekly_plan.tpm_weekly_plan" sequence="8"/>
			
	
	<!-- Menu Item End -->		
		
</data>
	</openerp>
