<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<!-- Form View Start -->

		<record id="t_form_v_kg_first_inspection" model="ir.ui.view">
			<field name="name">First Inspection Form</field>
			<field name="model">kg.first.inspection</field>
			<field name="arch" type="xml">
				<form string="First Stage Inspection" create="false" delete="false" version="7.0" >
					<header>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved"  readonly="1"/>
					</header>
					<sheet>
					<group>
						<group>
							<field name="name"/>						
							<field name="melt_id"/>						
						</group>
						<group>
							<field name="entry_date"  readonly='1'/>
						</group>					
					</group>
					<notebook>
						<page string="Inspection Details">
							<field name="line_ids" colspan="4" nolabel="1"  attrs="{'readonly': [('state','in',['approved'])]}">
								<tree string="Inspection Line" create="false" delete="false" editable="bottom">
									<field name="product_id" readonly='1'/>
									<field name="uom_id"/>
									<field name="production_id" invisible='1'/>
									<field name="grade_id" readonly='1'/>
									<field name="so_line_id" invisible='1'/>
									<field name="sch_line_id" invisible='1'/>
									<field name="week_line_id" invisible='1'/>
									<field name="daily_line_id" invisible='1'/>
									<field name="mould_line_id" invisible='1'/>
									<field name="melting_log_id" invisible='1'/>
									<field name="melt_id" invisible='1'/>
									<field name="melt_line_id" invisible='1'/>
									<field name="heat_no" required='1' readonly='1'/>
									<field name="qty"/>
									<field name="acc_qty"/>
									<field name="rej_qty"/>
									<field name="entry_mode"/>
								</tree> 
							</field>
						</page>
						<page string="Internal Notes">
							<field name="remark" nolabel='1' placeholder="Put an internal note..."/>
						</page>							
                        <page string="Entry Info">
							<group>
								<field name="company_id"/>
							</group>
							<group>
								<field name="active"/>
							</group>						
							<group>
								<group>
									<field name="user_id"/>
									<field name="confirm_user_id" attrs="{'invisible': [('state','=', 'draft')]}"/>
									<field name="ap_rej_user_id" attrs="{'invisible': [('state','in', ('draft','confirmed'))]}"/>
									<field name="update_user_id"/>
								</group>
								<group>
									<field name="crt_date"/>
									<field name="confirm_date" attrs="{'invisible': [('state','=', 'draft')]}"/>
									<field name="ap_rej_date" attrs="{'invisible': [('state','in', ('draft','confirmed'))]}"/>
									<field name="update_date"/>	
								</group>
							</group>
                        </page>            
						</notebook>				
					</sheet>
				</form>
			</field> 
		</record>
		
	<!-- Form View End -->
	     	
	
		
	<!-- Tree View Start -->
	
	
		<record id="t_tree_v_kg_first_inspection" model="ir.ui.view">
			<field name="name">Inspection Tree</field>
			<field name="model">kg.first.inspection</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree create="false" delete="false" toolbar="True" string="First Inspection" colors="blue:state == 'draft';red:state == 'confirmed';black:state == 'approved'">					
					<field name="name"/>
					<field name="melt_id"/>
					<field name="entry_date"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		
	<!-- Tree View End -->
	

	<!-- Search View Start -->

		<record id="t_search_v_kg_first_inspection" model="ir.ui.view">
            <field name="name">Inspection Search</field>
            <field name="model">kg.first.inspection</field>
            <field name="arch" type="xml">
                <search string="Inspection Search">
					<field name="name" string="Name"  filter_domain="[('name','ilike',self)]" />
					<field name="melt_id" string="Melt Id"  filter_domain="[('melt_id','ilike',self)]" />
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->

        
	<!-- Menu Action Start-->
		
		
		 <record id="tma_kg_first_inspection" model="ir.actions.act_window">
			<field name="name">First Stage Inspection</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.first.inspection</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="t_tree_v_kg_first_inspection"/>
			<field name="search_view_id" ref="t_search_v_kg_first_inspection"/>
			<field name="context">{"search_default_draft":1}</field>
		</record>
		
	<!-- Menu Action End-->

	
	<!-- Audit Log Xml Data Start -->
		
        <record id="audit_kg_first_inspection" model="audittrail.rule">
            <field name="name">Audit Log First Inspection</field>
            <field name="object_id" eval="ref('kg_first_inspection.model_kg_first_inspection')"/>       
            <field name="state">subscribed</field>              
        </record>
		
        <record id="audit_kg_first_inspection_line" model="audittrail.rule">
            <field name="name">Audit Log First Inspection Line</field>
            <field name="object_id" eval="ref('kg_first_inspection.model_ch_first_inspection_line')"/>       
            <field name="state">subscribed</field>              
        </record>
        
    
        
    <!-- Audit Log Xml Data End-->	
		

		
	<!-- Menu Item Start -->
			
            
				
				<!-- Weekly Plan Action details-->
				
				<menuitem action="tma_kg_first_inspection" name="First Stage Inspection" id="tam_kg_first_inspection" parent="kg_weekly_plan.tpm_weekly_plan" sequence="6"/>
			
	
	<!-- Menu Item End -->		
		
</data>
	</openerp>
