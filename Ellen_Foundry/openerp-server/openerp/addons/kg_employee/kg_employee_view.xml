<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<!-- Form View Start -->

	<record id="m_form_v_kg_employee_m" model="ir.ui.view">
			<field name="name">kg employee</field>
			<field name="model">hr.employee</field>
			<field name="arch" type="xml">
				<form string="Employee" version="7.0">
				<header>
						<button name="entry_approve" type="object" string="Approve" states="confirm" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_reject" type="object" string="Reject" states="confirm" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<button name="entry_cancel" type="object" string="Cancel" attrs="{'invisible':[('modify','=','no')]}" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_draft" class="oe_highlight" type="object" string="Set To Draft" attrs = "{'invisible':[('state','not in',('cancel'))]}"/> 						
						<field name="state" widget="statusbar" statusbar_visible="draft,approved,confirm,cancel,reject" statusbar_colors='{"draft":"blue","approved":"blue","confirm":"red","cancel":"red","reject":"red"}' readonly="1"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="name" class="aplhanum_expect" attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}"/>						
								<field name="modify" invisible='1'/>
							</group>
							<group>
								<field name="code" class="aplhanum_expect" required='1' attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}"/>						
							</group>					
						</group>
					<group>
						<group string="Public Information">
							<field name="address_id" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />						
							<field name="work_email" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />						
							<field name="work_phone" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />						
							<field name="mobile_phone" attrs="{'readonly': [('state','in',['approved','cancel'])]}"/>						
							<field name="work_location" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />						
						</group>		
						<group string="Citizenship  &amp; Other Info">
							<field name="country_id" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />
							<field name="identification_id" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />
							<field name="otherid" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />
						</group>	
						<group string="Status">
							<field name="gender" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />
							<field name="marital" attrs="{'readonly': [('state','in',['approved','cancel'])]}"/>
						</group>	
						<group string="birthday">
							<field name="birthday" options="{'datepicker':{'maxDate': 0,'minDate':null}}" attrs="{'readonly': [('state','in',['approved','cancel'])]}" />
						</group>	
					</group>						
                 		<group string='Remarks' attrs="{'invisible':[('state','=','draft')]}">
							<group>	
								<field name="remark" attrs="{'invisible':[('state','=','draft')], 'readonly': [('state','in',['approved','reject','cancel'])]}"/>
							</group>
							<group>												
								<field name="cancel_remark" attrs="{'invisible': [('state','in', ('draft','confirm','reject'))] , 'readonly': [('state','in',['cancel'])]}"/>												
							</group>
						</group>				
						<notebook>
							<page string="Internal Notes">
								<field name="notes" nolabel='1' placeholder="Put an internal note..."/>
							</page>							
							<page string="Entry Info">
								<group>
								<group>
									<field name="company_id" readonly='1'/>
									<field name="active"/>
								</group>
								</group>							
								<group>
									<group>
										<field name="user_id"/>
										<field name="confirm_user_id" attrs="{'invisible': [('state','=', 'draft')]}"/>
										<field name="ap_rej_user_id" attrs="{'invisible': [('state','in', ('draft','confirm','reject'))]}"/>
										<field name="cancel_user_id" attrs="{'invisible': [('state','in', ('draft','confirm','approved','reject'))]}"/>
										<field name="update_user_id"/>
									</group>
									<group>
										<field name="crt_date"/>
										<field name="confirm_date" attrs="{'invisible': [('state','=', 'draft')]}"/>
										<field name="ap_rej_date" attrs="{'invisible': [('state','in', ('draft','confirm','reject'))]}"/>
										<field name="cancel_date" attrs="{'invisible': [('state','in', ('draft','confirm','approved','reject'))]}"/>							
										<field name="update_date"/>	
									</group>
								</group>
							</page>                        
						</notebook>				
					</sheet>
				</form>
			</field> 
		</record>

		<!-- Form View End -->

		<!-- Tree View Start -->
		
		
		<record id="m_tree_v_kg_employee_m" model="ir.ui.view">
			<field name="name">kg employee</field>
			<field name="model">hr.employee</field>
			<field name="arch" type="xml">
				<tree toolbar="True" string="Employee" colors="blue:state == 'draft';red:state == 'confirm';black:state == 'approved';grey:state == 'reject'">
					<field name="name"/>
					<field name="code"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		
		<!-- Tree View End -->

		<!-- Search View Start -->
		
				
        <record id="m_search_v_kg_employee_m" model="ir.ui.view">
            <field name="name">kg employee search</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <search string="Employee">
                    <field name="name" string="Name"/>
                    <field name="code" string="Code"/>
					<group expand="0" string="Group By...">
						<filter string="Status" context="{'group_by': 'state'}"/>
					</group>                    
                </search>
            </field>
        </record>	
        

		<!-- Search View End -->
		

		<!-- Menu Action Start-->		

		
        <record id="m_action_v_kg_employee" model="ir.actions.act_window">
            <field name="name">Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
			<field name="domain">[('id','!=',1)]</field>
            <field name="view_mode">tree,form</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                OpenERP helps you easily track all activities related to
                a supplier: discussions, history of purchases,
                documents, etc.
              </p>
            </field>
        </record>    


        <record id="m_action_v_kg_employee_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="m_form_v_kg_employee_m"/>
            <field name="act_window_id" ref="m_action_v_kg_employee"/>
        </record>
        <record id="m_action_v_kg_employee_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="m_tree_v_kg_employee_m"/>
            <field name="act_window_id" ref="m_action_v_kg_employee"/>
        </record>

		
		<!-- Menu Action End-->
		
		
		 <!-- Audit Log Xml Data Start -->
		 
		 		
        <record id="model_kg_employee" model="audittrail.rule">
            <field name="name">Employee Master</field>
            <field name="object_id" eval="ref('hr.model_hr_employee')"/>       
            <field name="state">subscribed</field>              
        </record>
        
        <!-- Audit Log Xml Data End-->
        
		
		<!-- Menu Name Start here --> 	
		<menuitem id="mpm_hr_employee" parent="kg_menus.kg_depmaster_parent_menu" name = "Human Resources" sequence="2"/>

		 			
			<menuitem id="mam_kg_employee" parent="mpm_hr_employee" name="Employee Master" action="m_action_v_kg_employee" sequence="1"/>
		
		<!-- Menu Name End here --> 
		

</data>
	</openerp>
