<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<!-- Form View Start -->

		<record id="t_form_v_kg_melting_log" model="ir.ui.view">
			<field name="name">Melting Log Form</field>
			<field name="model">kg.melting.log</field>
			<field name="arch" type="xml">
				<form string="Melting Log" version="7.0">
					<header>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved"  readonly="1"/>
					</header>
					<sheet>
					<group>
						<group>
							<field name="name"/>						
						</group>
						<group>
							<field name="entry_date"  readonly='1'/>
						</group>					
					</group>
					<group>
						<group string="Basic Information">
							<field name="furnance_heat_no" attrs="{'readonly': [('state','in',['approved'])]}" />						
							<field name="grade_id" attrs="{'readonly': [('state','in',['approved'])]}" />						
							<field name="tapping_temp" attrs="{'readonly': [('state','in',['approved'])]}" />						
							<field name="pouring_temp" attrs="{'readonly': [('state','in',['approved'])]}" />						
							<field name="tapping_opt" attrs="{'readonly': [('state','in',['approved'])]}" />						
							<field name="pouring_opt" attrs="{'readonly': [('state','in',['approved'])]}" />						
						</group>		
						<group string="Other Information">
							<field name="shell_coke" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="pet_coke" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="fesi" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="femn" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="cu" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="fesi_mg" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="inoculant" attrs="{'readonly': [('state','in',['approved'])]}" />
						</group>	
						<group string="Charging Information">
							<field name="sg_pig_iron" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="returns" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="mild_steel" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="ci_boring" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="pig_iron" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="silicon_steel" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="spillage" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="ci_scrap" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="base_metal" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="total" attrs="{'readonly': [('state','in',['approved'])]}" />
						</group>		
						<group string="Power">
							<field name="initial_reading" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="final_reading" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="units_heat" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="units_ton" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="furnace_started" widget="float_time" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="pouring_started" widget="float_time" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="pouring_finished" widget="float_time" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="during_time" widget="float_time" attrs="{'readonly': [('state','in',['approved'])]}" />
						</group>					
						<group string="Chemical Composition">
							<field name="silicon" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="copper" attrs="{'readonly': [('state','in',['approved'])]}" />
							<field name="magnesium" attrs="{'readonly': [('state','in',['approved'])]}" />
						</group>
					</group>
					<notebook>
						<page string="Internal Notes">
							<field name="remark" nolabel='1' placeholder="Put an internal note..."/>
						</page>							
                        <page string="Entry Info">
							<group>
								<field name="company_id"/>
							</group>
							<group>
								<field name="active"/>
							</group>						
							<group>
								<group>
									<field name="user_id"/>
									<field name="confirm_user_id" attrs="{'invisible': [('state','=', 'draft')]}"/>
									<field name="ap_rej_user_id" attrs="{'invisible': [('state','in', ('draft','confirmed'))]}"/>
									<field name="update_user_id"/>
								</group>
								<group>
									<field name="crt_date"/>
									<field name="confirm_date" attrs="{'invisible': [('state','=', 'draft')]}"/>
									<field name="ap_rej_date" attrs="{'invisible': [('state','in', ('draft','confirmed'))]}"/>
									<field name="update_date"/>	
								</group>
							</group>
                        </page>            
						</notebook>				
					</sheet>
				</form>
			</field> 
		</record>
		
	<!-- Form View End -->
	     	
	
		
	<!-- Tree View Start -->
	
	
		<record id="t_tree_v_kg_melting_log" model="ir.ui.view">
			<field name="name">Melting Log Tree</field>
			<field name="model">kg.melting.log</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree toolbar="True" string="Melting Log" colors="blue:state == 'draft';red:state == 'confirmed';black:state == 'approved'">					
					<field name="name"/>
					<field name="furnance_heat_no"/>
					<field name="grade_id"/>
					<field name="entry_date"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		
	<!-- Tree View End -->
	

	<!-- Search View Start -->

		<record id="t_search_v_kg_melting_log" model="ir.ui.view">
            <field name="name">Melting Log Search</field>
            <field name="model">kg.melting.log</field>
            <field name="arch" type="xml">
                <search string="Melting Log Search">
					<field name="name" string="Name"  filter_domain="[('name','ilike',self)]" />
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->

        
	<!-- Menu Action Start-->
		
		
		 <record id="tma_kg_melting_log" model="ir.actions.act_window">
			<field name="name">Melting Log</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.melting.log</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="t_tree_v_kg_melting_log"/>
			<field name="search_view_id" ref="t_search_v_kg_melting_log"/>
			<field name="context">{"search_default_draft":1}</field>
		</record>
		
	<!-- Menu Action End-->

	
	<!-- Audit Log Xml Data Start -->
		
        <record id="audit_kg_melting_log" model="audittrail.rule">
            <field name="name">Audit Log Melting Log</field>
            <field name="object_id" eval="ref('kg_melting_log.model_kg_melting_log')"/>       
            <field name="state">subscribed</field>              
        </record>
        
    
        
    <!-- Audit Log Xml Data End-->	
		

		
	<!-- Menu Item Start -->
			
            
				
				<!-- Weekly Plan Action details-->
				
				<menuitem action="tma_kg_melting_log" name="Melting Log" id="tam_kg_melting_log" parent="kg_weekly_plan.tpm_weekly_plan" sequence="4"/>
			
	
	<!-- Menu Item End -->		
		
</data>
	</openerp>
