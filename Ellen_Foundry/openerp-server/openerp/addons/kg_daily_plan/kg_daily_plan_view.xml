<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<!-- Form View Start -->

		<record id="t_form_v_daily_plan" model="ir.ui.view">
			<field name="name">Daily Plan Form</field>
			<field name="model">kg.daily.plan</field>
			<field name="arch" type="xml">
				<form string="Daily Plan" version="7.0">
					<header>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved"  readonly="1"/>
					</header>
					<sheet>
					<group>
						<group>
							<field name="name"/>						
							<field name="entry_mode" invisible='1'/>						
						</group>
						<group>
							<field name="entry_date"/>
						</group>					
					</group>
					<group>
						<group string="Schedule Ids">
							<field name="sch_ids" widget="many2many_tags" attrs="{'readonly': [('state','in',['approved'])]}"/>
						</group>
						<group>
						</group>
					</group>
					<button name="load_sch" type="object" attrs="{'invisible': [('state','not in',['draft'])]}" string="Load Schedule" class="oe_highlight"/>
					<notebook>
						<page string="Daily Planning Details">
							<field name="line_ids" colspan="4" nolabel="1"  attrs="{'readonly': [('state','in',['approved'])]}">
								<tree string="Daily Plan Line" editable="bottom">
									<field name="product_id" readonly='1'/>
									<field name="uom_id" readonly='1'/>
									<field name="production_id" readonly='1'/>
									<field name="grade_id" readonly='1'/>
									<field name="so_line_id" invisible='1'/>
									<field name="sch_line_id" invisible='1'/>
									<field name="week_id" invisible='1'/>
									<field name="week_line_id" invisible='1'/>
									<field name="order_qty" invisible='1'/>
									<field name="sch_qty" readonly='1'/>
									<field name="daily_qty" on_change="onchange_qty(product_id,daily_qty,tot_box,tot_weight,cavity)"/>
									<field name="heat_no" required='1'/>
									<field name="tot_box" readonly='1'/>
									<field name="box_weight" readonly='1'/>
									<field name="tot_weight" readonly='1'/>
									<field name="entry_mode" readonly='1'/>
									<field name="cavity" invisible='1'/>
								</tree> 
							</field>
						</page>
						<page string="Internal Notes">
							<field name="remark" nolabel='1' placeholder="Put an internal note..."/>
						</page>							
                        <page string="Entry Info">
							<group>
								<field name="company_id"/>
							</group>
							<group>
								<field name="active"/>
							</group>						
							<group>
								<group>
									<field name="user_id"/>
									<field name="confirm_user_id" attrs="{'invisible': [('state','=', 'draft')]}"/>
									<field name="ap_rej_user_id" attrs="{'invisible': [('state','in', ('draft','confirmed'))]}"/>
									<field name="update_user_id"/>
								</group>
								<group>
									<field name="crt_date"/>
									<field name="confirm_date" attrs="{'invisible': [('state','=', 'draft')]}"/>
									<field name="ap_rej_date" attrs="{'invisible': [('state','in', ('draft','confirmed'))]}"/>
									<field name="update_date"/>	
								</group>
							</group>
                        </page>            
						</notebook>				
					</sheet>
				</form>
			</field> 
		</record>
		
	<!-- Form View End -->
	     	
	
		
	<!-- Tree View Start -->
	
	
		<record id="t_tree_v_daily_plan" model="ir.ui.view">
			<field name="name">Daily Plan Tree</field>
			<field name="model">kg.daily.plan</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree toolbar="True" string="Daily Plan" colors="blue:state == 'draft';red:state == 'confirmed';black:state == 'approved'">					
					<field name="name"/>
					<field name="entry_date"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		
	<!-- Tree View End -->
	

	<!-- Search View Start -->

		<record id="t_search_v_daily_plan" model="ir.ui.view">
            <field name="name">Daily Plan Search</field>
            <field name="model">kg.daily.plan</field>
            <field name="arch" type="xml">
                <search string="Daily Plan Search">
					<field name="name" string="Name"  filter_domain="[('name','ilike',self)]" />
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->

        
	<!-- Menu Action Start-->
		
		
		 <record id="tma_daily_plan" model="ir.actions.act_window">
			<field name="name">Daily Plan</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.daily.plan</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="t_tree_v_daily_plan"/>
			<field name="search_view_id" ref="t_search_v_daily_plan"/>
			<field name="context">{"search_default_draft":1}</field>
		</record>
		
	<!-- Menu Action End-->

	
	<!-- Audit Log Xml Data Start -->
		
        <record id="audit_daily_plan" model="audittrail.rule">
            <field name="name">Audit Log Daily Plan</field>
            <field name="object_id" eval="ref('kg_daily_plan.model_kg_daily_plan')"/>       
            <field name="state">subscribed</field>              
        </record>
		
        <record id="audit_daily_plan_line" model="audittrail.rule">
            <field name="name">Audit Log Daily Plan Line</field>
            <field name="object_id" eval="ref('kg_daily_plan.model_ch_daily_plan_line')"/>       
            <field name="state">subscribed</field>              
        </record>
        
    
        
    <!-- Audit Log Xml Data End-->	
		

		
	<!-- Menu Item Start -->
			
            
				
				<!-- Weekly Plan Action details-->
				
				<menuitem action="tma_daily_plan" name="Daily Planning" id="tam_daily_plan" parent="kg_weekly_plan.tpm_weekly_plan" sequence="2"/>
			
	
	<!-- Menu Item End -->		
		
</data>
	</openerp>
