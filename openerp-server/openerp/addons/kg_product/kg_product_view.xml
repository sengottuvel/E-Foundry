<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!-- Product Master form view -->

	<record model="ir.ui.view" id="kg_product_form_inherit">
        <field name="name">kg.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">		
		
		<field name="product_code" position="after">
			<field name="is_accessories" invisible='1'/>
			<field name="capital" invisible="1"/>
			<field name="abc" invisible="1"/>
			<field name="stockable" attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}"/>
		</field>
		
		<field name="categ_id" position="after">
			<field name="hsn_code" attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}"/>
		</field>

		<field name="variants" position="replace">
		<field name="variants" invisible="1"/>
		</field>
		
		<field name="price_extra" position="replace">
		<field name="price_extra" invisible="1"/>
		</field>
		
		<field name="price_margin" position="replace">
		<field name="price_margin" invisible="1"/>
		</field>
		
		<field name="uom_id" position="before">
		<field name="product_type" attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}"/>
		<field name="uom_conversation_factor" attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}" invisible='1'/>
		</field>
		
		<field name="tolerance_plus" position="after">
		<field name="od" invisible='1'/>
		<field name="breadth" invisible='1'/>
		</field>
		
		<field name="reorder_qty" position="after">
		<field name="po_uom_in_kgs" attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}"/>
		<field name="length" invisible='1'/>
		<field name="thickness" invisible='1'/>
		<field name="weight" invisible='1'/>
		</field>
		
		<field name="uom_po_id" position="after">
		<field name="po_uom_coeff" placeholder="UOM * PO Coeff = 1 POM" attrs="{'readonly':[('state','=','approved')]}"/>
		</field>
			
		<field name="list_price" position="replace">
		</field>
		
		<field name="sale_ok" position="replace">
        <field name="sale_ok" invisible="1"/>
        </field>
        
		<field name="rack_details" position="after">
				<field name="production_unit_id"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="part_name" attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="casting_type"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="painting"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="machining" attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="packing"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="inspec_detail"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
        </field>
        
		<field name="qa_verification" position="after">
				<field name="customer_id"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="metal_id"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="re_shot_blasting"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="test_bar" attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="internal_reference"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="sale_price" attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
				<field name="piece_wgt"   attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
        </field>
        
		<field name="tolerance_applicable" position="after">
				<field name="core"  attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
        </field>
        
		<field name="flag_expiry_alert" position="after">
				<field name="drawing_details" attrs="{'invisible':[('product_type','!=','finished_items')],'readonly':[('state','in',('approved','reject','cancel'))]}"/>
        </field>
        
        <field name="user_id" position="after">
			<field name="conf_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
			<field name="app_user_id" attrs="{'invisible':[('state','in',['draft', 'confirm','reject'])]}"/>
			<field name="cancel_user_id" attrs="{'invisible':[('state','in',['draft', 'confirm','reject','approved'])]}"/>
			<field name="rej_user_id" attrs="{'invisible':[('state','in',['draft', 'confirm','approved'])]}"/>		
		</field>
        <field name="crt_date" position="after">
			<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
			<field name="approve_date" attrs="{'invisible':[('state','in',['draft', 'confirm','reject'])]}"/>
			<field name="cancel_date" attrs="{'invisible':[('state','in',['draft', 'confirm','reject','approved'])]}"/>
			<field name="reject_date" attrs="{'invisible':[('state','in',['draft', 'confirm','approved'])]}"/>				
		</field>

		<xpath expr = "//page[@string='Entry Info']" position="before">
				<page string="Coupling Details" attrs="{'invisible':[('product_type','not in',('coupling'))]}">
					<group>
						<group>
							<field name="coupling_type" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="power_kw" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="max_bore" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="spacer_length" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
						</group>
						<group>
							<field name="service_factor" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="speed_in_rpm" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="coupling_size" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
						</group>
					</group>
				</page>
		</xpath>
		
		<xpath expr = "//page[@string='Internal Notes']" position="before">
			<page string="Supplier Details" attrs="{'invisible':[('product_type','=','finished_items')]}">
				<field name="supplier_details" colspan="4" nolabel="1">
					<tree string = "Supplier Details" editable="bottom">
						<field name="partner_id"/>
						<field name="price"/>
					</tree>
				</field>													
			</page>
		</xpath>
		<xpath expr = "//page[@string='Supplier Details']" position="before">
			<page string="Average Price">
				<field name="avg_line_ids" editable="bottom">
					<tree>
						<field name="fiscal_id"/>
						<field name="avg_price"/>
					</tree>	
				</field>					 
			</page>
		</xpath>
		<xpath expr = "//page[@string='Average Price']" position="before">
			<page string="Core mapping"  attrs="{'invisible':[('core','!=',True)]}">
				<field name="line_ids_a" editable="bottom">
					<tree editable="bottom">
						<field name="core_name" on_change="onchange_core_datails(core_name,core_box_code,type_core,wt_of_cores)"/>
						<field name="core_box_code" readonly='1'/>
						<field name="type_core" readonly='1'/>
						<field name="no_of_cores"/>
						<field name="wt_of_cores" readonly='1'/>
					</tree>	
				</field>					 
			</page>
		</xpath>
		
		<xpath expr = "//page[@string='Average Price']" position="before">
			<page string="Drawing Details"  attrs="{'invisible':[('drawing_details','!=',True)]}">
				<field name="line_ids_b" editable="bottom" attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}">
					<tree editable="bottom">
						<field name="name"/>
						<field name="drawing_rev_number"/>
						<field name="attachment"/>
						<field name="draw_info"/>
					</tree>	
				</field>					 
			</page>
		</xpath>		
		
		<xpath expr = "//page[@string='Average Price']" position="before">
			<page string="Inspection Details" attrs="{'invisible':[('inspec_detail','!=','required')]}">
				<field name="line_ids_c" editable="bottom" attrs="{'readonly':[('state','in',('approved','reject','cancel'))]}">
					<tree editable="bottom">
						<field name="inspect_number"/>
						<field name="inspection_rev_number"/>
						<field name="attachment"/>
						<field name="inspection_info"/>
					</tree>	
				</field>					 
			</page>
		</xpath>		
		
		<xpath expr = "//page[@string='Coupling Details']" position="before">
				<page string="Mechanical Seal Details" attrs="{'invisible':[('product_type','not in',('mechanical_seal'))]}">
					<group>
						<group>
							<field name="operating_condition" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="api_plan" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="gland_plate" attrs="{'readonly':[('state','in',('approved','reject'))],'required':[('product_type','=','mechanical_seal')]}"/>
						</group>
						<group>
							<field name="mechanical_type" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="face_combination" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
							<field name="sleeve_dia" attrs="{'readonly':[('state','in',('approved','reject'))]}"/>
						</group>
					</group>
				</page>
		</xpath>
		</field>
	</record>
	
	<record model="ir.ui.view" id="kg_product_field_hidden_inherit">
        <field name="name">kg.product.field.hidden.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_form_view"/>
        <field name="arch" type="xml">
		<group>
		<field name="variants" position="replace">
		<field name="variants" invisible="1"/>
		</field>	
		<field name="price_extra" position="replace">
		<field name="price_extra" invisible="1"/>
		</field>
		<field name="price_margin" position="replace">
		<field name="price_margin" invisible="1"/>
		</field>
		</group>
		</field>
	</record>
	
	<record model="ir.ui.view" id="kg_product_tree">
		<field name="name">product.product.tree</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="product.product_product_tree_view"/>
		<field name="arch" type="xml">
			<field name="qty_available" position="after"> 
			<field name="product_type" invisible="1"/> 
			</field>					
		</field>
	</record>
			

	<record id="kg_action_product_form" model="ir.actions.act_window">
		<field name="name">Product Master Design</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">product.product</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form,kanban</field>
		<field name="context">{'default_product_type': 'ms',}</field>
	</record>
	
	
		<!-- Tree View Start -->
		
		<record id="m_tree_v_drawing_details" model="ir.ui.view">
			<field name="name">Drawing Tree</field>
			<field name="model">kg.drawing.details</field>
			<field name="arch" type="xml">
				<tree toolbar="True" string="Drawing Details" >
					<field name="header_id"/>
					<field name="name"/>
					<field name="drawing_rev_number"/>
					<field name="attachment"/>
					<field name="draw_info"/>
				</tree>
			</field>
		</record>
		
		
		
		<!-- Tree View End -->


		

		<!-- Menu Action Start-->		
		
		
		 <record id="mma_drawing_details" model="ir.actions.act_window">
			<field name="name">Drawing Details</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.drawing.details</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="m_tree_v_drawing_details"/>
		</record>
		
		<!-- Menu Action End-->
		
		
        
		
		<!-- Menu Name Start here --> 	
					
<!--
			<menuitem id="mam_drawing_details" parent="kg_production_unit.mpm_production_master" name="Drawing Details" action="mma_drawing_details" sequence="10"/>
-->
		
		<!-- Menu Name End here --> 	
	
	
	    </data>
</openerp>
