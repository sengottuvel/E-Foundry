<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		
        <record model="ir.ui.view" id="kg_partner_form_view">
        <field name="name">kg_partner_form_view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">	
			<xpath expr="//sheet" position="before">
			<header>
			<button name="entry_cancel" type="object" string="Cancel" attrs="{'invisible':[('modify','=','no')]}" class="oe_highlight" confirm="Are you sure to proceed ?"/>
				<button name="entry_draft" class="oe_highlight" type="object" string="Set To Draft" attrs = "{'invisible':[('sup_state','not in',('cancel'))]}"/> 
				<field name="sup_state" widget="statusbar" statusbar_visible="draft,approve,confirm,cancel,reject" statusbar_colors='{"draft":"blue","approve":"blue","confirm":"red","cancel":"red","reject":"red"}' readonly="1"/>									
			</header>
			</xpath>
			
		<field name="city" position="after">
		<field name="city_id" on_change="onchange_city(city_id)" style="width: 40%%" placeholder="City" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		</field>
		
		<field name="name" position="before">
		<field name="company_type" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':['|',('customer','=',True),('dealer','=',True)]}" required='1'/>
		</field>
		
		<field name="website" position="before">
		<field name="email_applicable" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
        <field name="email" class="email_validation" widget="email" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('email_applicable','!=','yes')],'required': [('email_applicable','=', 'yes')]}"/>
		</field>
		<field name="name" position="after">
		<field name="alias_name" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('dealer','!=',True),('customer','!=',True)]}"/>
		</field>
		
		<field name="is_company" position="replace">
		<field name="is_company" invisible="1"/>
		<field name="tin_no" class="aplhanum_expect" attrs = "{'readonly':[('sup_state','in',('approved','reject','cancel'))]}" placeholder="TIN Number"/>
		</field>
		
		<field name="zip" position="replace">
			<field name="zip" class="aplhanum_expect" on_change="onchange_zip(zip)" placeholder="ZIP" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
			<field name="language" invisible="1"/>
		</field>
		
		<field name="birthdate" position="replace">
		<field name="supply_type" attrs = "{'invisible':['|',('customer','=',True),('dealer','=',True)],'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="tds" attrs = "{'required':[('company_type','=','individual')],'invisible':[('customer','=',True)],'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="tan_no" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="cst_no" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="vat_no" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="cheque_in_favour" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('customer','!=',True),('dealer','!=',True)]}"/>
		<field name="economic_category" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('customer','!=',True)]}"/>
		<field name="sector" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('dealer','!=',True)]}"/>
		<field name="dealer_id" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('customer','!=',True)]}"/>
		</field>
		
		<field name="ean13" position="replace">
		<field name="grade" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="pan_no" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="adhar_id" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="gst_no" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="gstin_no" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<field name="max_deal_discount" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('dealer','!=',True)]}"/>
		<field name="max_cust_discount" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('customer','!=',True)]}"/>
		<field name="max_spl_discount"  attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('customer','!=',True)]}"/>
		<field name="user_ref_id" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}" invisible='1'/>
		</field>
		
		<field name="ref" position="replace">
		<field name="payment_id" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		<div >
			<label for="advance_limit"  string="Advance"  attrs="{'invisible': [('customer','=',True)],'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
			<label for="advance_limit" string="Credit" attrs="{'invisible': [('supplier','=',True)],'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		</div>
		<field name="advance_limit" nolabel="1" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		</field>		
				

		
		<field name="color" position="replace">
		<field name="delivery_id" attrs = "{'invisible':[('dealer','=',True)],'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		</field>
		

		
		<field name="country_id" position="after">
		<field name="region" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('customer','!=',True),('dealer','!=',True)]}"/>
		</field>

		<field name="function" position="replace">
		<field name="contact_person" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		</field>
		
		<field name="contact_person" position="after">
        <field name="sms_applicable" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
        <field name="mobile" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('sms_applicable','!=','yes')],'required': [('sms_applicable','=', 'yes')]}"/>
		<field name="mobile_2" class="aplhanum_expect" invisible='1' attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		</field>		
		
		<field name="title" position="replace">
		<field name="group_flag" invisible="1"/>
		<field name="contractor" invisible="1"/>
		<field name="tin_flag" invisible="1"/>
		</field>
		
		<field name="city" position="replace">
		<field name="city" invisible="1"/>
		<field name="landmark" placeholder="Landmark" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
		</field>
		
		<field name="category_id" position="replace">
		<field name="category_id" invisible="1"/>
		<field name="con_designation" invisible="1"/>
		<field name="con_whatsapp" invisible="1"/>
		<field name="partner_state" invisible="1"/> 
		<field name="dealer" invisible="1"/> 
		<field name="modify" invisible="1"/> 
		</field>		
		
		<xpath expr = "//page[@string='Additional Contacts']" position="after">
				<page string="Delivery Address" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('customer','!=',True)]}">
				<field colspan="4" mode="tree" name="delivery_ids" nolabel="1" widget="one2many_list" >
					<tree string="Delivery Address"> 
						<field name="landmark"/>
						<field name="street" string="Street1"/>
						<field name="street1" string="Street2"/>
						<field name="city_id"/>
						<field name="contact_no"/>
						<field name="default"/>
					</tree>
					<form string="Delivery Address"	>
						<group>
							<group>
								<field name="landmark" placeholder="Landmark"/>
								<field name="street" string="Street1"/>
								<field name="street1" string="Street2"/>
								<field name="city_id"/>
								<field name="state_id"/>
								<field name="country_id"/>
							</group>
							<group>
								<field name="contact_no"/>
								<field name="zip"/>
								<field name="default"/>
							</group>
						</group>
					</form>
				</field>
				</page>
				</xpath>
				
		<xpath expr = "//page[@string='Delivery Address']" position="after">
				<page string="Billing Address" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))],'invisible':[('customer','!=',True),('dealer','!=',True)]}">
				<field colspan="4" mode="tree" name="billing_ids" nolabel="1" widget="one2many_list" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}">
					<tree string="Billing Address" editable='bottom'> 
						<field name="landmark"/>
						<field name="street" string="Street1"/>
						<field name="street1" string="Street2"/>
						<field name="city_id"/>
						<field name="contact_no"/>
						<field name="default"/>
					</tree>
					<form string="Billing Address"	attrs="{'readonly': [('sup_state','!=', 'draft')]}">
						<group>
							<group>
								<field name="landmark" placeholder="Landmark"/>
								<field name="street" string="Street1"/>
								<field name="street1" string="Street2"/>
								<field name="city_id"/>
								<field name="state_id"/>
								<field name="country_id"/>
							</group>
							<group>
								<field name="contact_no"/>
								<field name="zip"/>
								<field name="default"/>
							</group>
						</group>
					</form>
				</field>
				</page>
			</xpath>
		
		<!-- Bank Tab Menu -->
		
		<xpath expr = "//page[@string='Billing Address']" position="after">
				<page string="Bank Details" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}" invisible='1'>
					<group>
				<field name="bank_ids" nolabel="1" context="{'default_partner_id': active_id, 'form_view_ref': 'base.view_partner_bank_form'}" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}">
				<form string="Bank" version="7.0">
				<sheet>
				<group>
						<field name="acc_number" colspan="4"/>
					<group string="Bank Account Owner">
						<field name="owner_name"/>
						<field name="street"/>
						<field name="city"/>
						<field name="state_id" string="State"/>
						<field name="country_id"/>
						<field name="zip"/>
					</group>
					<group string="Information About The Bank">
						<field name="bank"/>
						<field name="bank_name"/>
						<field name="bank_bic"/>
					</group>
				</group>	
				</sheet>
			</form>
			</field>
			</group>
			</page>	
		</xpath>
		
		<xpath expr = "//page[@string='Bank Details']" position="after">
				<page string="Consultant Fee" invisible='1'>
				<field colspan="4" mode="tree" name="consult_ids" nolabel="1" widget="one2many_list" >
					<tree string="Consult Fee" editable="bottom"> 
						<field name="effective_date" attrs="{'readonly':[('read_flag','=',True)]}"/>
						<field name="value" attrs="{'readonly':[('read_flag','=',True)]}"/>
						<field name="state" readonly="1"/>
						<field name="read_flag" readonly="1" invisible="1"/>
					</tree>
					<form string="Billing Address" >
						<group>
							<group>
								<field name="effective_date"/>
								<field name="value"/>
							</group>
							<group>
								<field name="state" readonly="1"/>
								<field name="read_flag" invisible="1"/>
							</group>
						</group>
					</form>
				</field>
			</page>	
		</xpath>
		</field>
	</record>
	
	
<!--
	Sub Contractor Form
-->
	
        <record id="m_form_v_sub_contractor" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <form string="Sub Contractor" version="7.0">
				<header> 
					<button name="entry_approve" type="object" string="Approve" class="oe_highlight" confirm="Are you sure to proceed ?" attrs="{'invisible': [('sup_state','!=', 'confirm')]}"/>
					<button name="entry_reject" type="object" string="Reject" class="oe_highlight" confirm="Are you sure to proceed ?" attrs="{'invisible': [('sup_state','!=', 'confirm')]}"/>
					<button name="entry_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('sup_state','!=', 'draft')]}"/>
					<button name="entry_cancel" type="object" string="Cancel" attrs="{'invisible':[('modify','=','no')]}" class="oe_highlight" confirm="Are you sure to proceed ?"/>
					<button name="entry_draft" class="oe_highlight" type="object" string="Set To Draft" attrs = "{'invisible':[('sup_state','not in',('cancel'))]}"/> 
					<field name="sup_state" widget="statusbar" statusbar_visible="draft,confirm,approve,cancel,reject" statusbar_colors='{"draft":"blue","approve":"blue","confirm":"red","cancel":"red","reject":"red"}' readonly="1"/>									
				</header>
                <sheet>
                        <group>
							<group>
								<field name="name" string="Name" default_focus="1" placeholder="Name" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
								<field name="type_of_process" invisible="1" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
							</group>
							<group>
								<field name="code" class="aplhanum_expect" placeholder="Code" required='1' attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>								
								<field name="modify" invisible="1"/> 
								<field name="sub_contractor" invisible="1"/> 
                        </group>
                        </group>
                    <group string="General Information">
                        <group>
                              <field name="phone" class="aplhanum_expect" placeholder="e.g. +32.81.81.37.00" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                              <field name="mobile" class="aplhanum_expect" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
							  <field name="email" class="email_validation" widget="email" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                              <field name="fax" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                              <field name="street" string="Street1" placeholder="Street1..."  attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                              <field name="city" placeholder="City" style="width: 40%%" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                        </group>
                        <group>
                            <field name="website" class="aplhanum_expect" widget="url" placeholder="e.g. www.openerp.com" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                            <field name="street2" placeholder="Street2..." attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                            <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' on_change="onchange_state(state_id)" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                            <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}' attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>
                            <field name="zip" class="aplhanum_expect" placeholder="ZIP" style="width: 20%%" attrs="{'readonly':[('sup_state','in',('approved','reject','cancel'))]}"/>                                
                        </group>
						
                    </group>
					<group string='Remarks' attrs="{'invisible':[('sup_state','=','draft')]}">
						<group>	
							<field name="remark" attrs="{'invisible':[('sup_state','=','draft')], 'readonly': [('sup_state','in',['approved','reject','cancel'])]}"/>
						</group>
						<group>												
							<field name="cancel_remark" attrs="{'invisible': [('sup_state','in', ('draft','confirm','reject'))] , 'readonly': [('sup_state','in',['cancel'])]}"/>												
						</group>
					</group>        
					            
                    <notebook colspan="4">
                        <page string="Internal Notes">
                            <field name="comment" placeholder="Put an internal note..."/>
                        </page>                       
                        <page string="Entry Info">
							<group>
									 <field name="active"/>
							</group>
							<group>
								<group>
									<field name="create_user_id"/>
									<field name="conf_user_id" attrs="{'invisible': [('sup_state','=', 'draft')]}"/>
									<field name="app_user_id" attrs="{'invisible': [('sup_state','in', ('draft','confirm','reject'))]}"/>
									<field name="rej_user_id" attrs="{'invisible': [('sup_state','in', ('draft','confirm','approved','cancel'))]}"/>
									<field name="cancel_user_id" attrs="{'invisible': [('sup_state','in', ('draft','confirm','approved','reject'))]}"/>
									<field name="updated_by"/>
								</group>
								<group>
									<field name="creation_date"/>
									<field name="confirm_date" attrs="{'invisible': [('sup_state','=', 'draft')]}"/>
									<field name="approve_date" attrs="{'invisible': [('sup_state','in', ('draft','confirm','reject'))]}"/>
									<field name="reject_date" attrs="{'invisible': [('sup_state','in', ('draft','confirm','approved','cancel'))]}"/>							
									<field name="cancel_date" attrs="{'invisible': [('sup_state','in', ('draft','confirm','approved','reject'))]}"/>							
									<field name="updated_date"/>							
								</group>
							</group>
                        </page>                                               
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>	
        
        
<!--
        Sub Contractor Tree
-->
        
        
        <record id="m_tree_v_sub_contractors" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Sub Contractor" colors="blue:sup_state == 'draft';red:sup_state == 'confirm';black:sup_state == 'approved';grey:sup_state == 'reject'">
                    <field name="name" string="Name"/>
                    <field name="code"/>
                    <field name="sup_state"/>
                </tree>
            </field>
        </record>        
        
        
<!--
        Sub contractor action
-->



        <record id="m_action_v_sub_contractor" model="ir.actions.act_window">
            <field name="name">Sub Contractor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>

            <field name="domain">[('sub_contractor','=',1)]</field>
            <field name="view_mode">tree,form</field>
			<field name="context">{'default_dealer': False,'default_customer': False,'default_supplier': False,'default_sub_contractor': True}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                OpenERP helps you easily track all activities related to
                a supplier: discussions, history of purchases,
                documents, etc.
              </p>
            </field>
        </record>    


        <record id="m_action_v_sub_contractor_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="m_form_v_sub_contractor"/>
            <field name="act_window_id" ref="m_action_v_sub_contractor"/>
        </record>
        <record id="m_action_v_sub_contractor_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="m_tree_v_sub_contractors"/>
            <field name="act_window_id" ref="m_action_v_sub_contractor"/>
        </record>


        
  
        
        
        
        
        
        
<!--
        Sub cotractor menu
-->

